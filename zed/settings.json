{
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "ssh_connections": [
    {
      "host": "contour",
      "username": "dcruza",
      "upload_binary_over_ssh": true,
      "projects": [
        {
          "paths": ["~/homelab"]
        }
      ]
    }
  ],
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Gruvbox Dark Hard",
    "dark": "One Dark"
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  }
}
